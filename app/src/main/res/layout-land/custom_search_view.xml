<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/custom_imgPoster_categorySearch"
        android:layout_width="0dp"
        android:layout_height="@dimen/_110sdp"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/custom_search_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.62"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_18ssp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="The Genstes , The Crop , the End of Life Heaca"
        app:layout_constraintStart_toEndOf="@id/custom_imgPoster_categorySearch"
        />
    <TextView
        android:id="@+id/custom_search_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rating_background"
        android:layout_gravity="bottom"
        android:drawableStart="@drawable/ic_baseline_star_24"
        android:drawablePadding="@dimen/_7sdp"
        android:gravity="center"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/gold"
        android:textStyle="bold"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/custom_search_title"
        app:layout_constraintStart_toEndOf="@id/custom_imgPoster_categorySearch"
        />
    <TextView
        android:id="@+id/custom_search_genres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.62"
        app:layout_constraintTop_toBottomOf="@id/custom_search_rate"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_14ssp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Acrion , Threialr ,akjcijaiscmLIXKCoaisncoascouab s xa sxas c asc "
        app:layout_constraintStart_toEndOf="@id/custom_imgPoster_categorySearch"
        />
</androidx.constraintlayout.widget.ConstraintLayout>