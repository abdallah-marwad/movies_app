<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Api" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/navy_blue</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.ActionBar.Transparent" parent="Theme.Api">
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="main_text_recyclerview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="err_msg_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="Theme.Api.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Api.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Api.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>